<SSOIdentityProviderConfig>
    <ServiceProviders>
        <ServiceProvider>
            <Issuer>portal</Issuer>
            <AssertionConsumerServiceURLs>
                <AssertionConsumerServiceURL>https://localhost:10143/portal/acs</AssertionConsumerServiceURL>
            </AssertionConsumerServiceURLs>
            <DefaultAssertionConsumerServiceURL>https://localhost:9443/portal/acs</DefaultAssertionConsumerServiceURL>
            <SignAssertion>false</SignAssertion>
            <SignResponse>true</SignResponse>
            <EnableAttributeProfile>false</EnableAttributeProfile>
            <IncludeAttributeByDefault>false</IncludeAttributeByDefault>
            <EnableSingleLogout>true</EnableSingleLogout>
            <Claims>
                <Claim>http://wso2.org/claims/givenName</Claim>
            </Claims>
            <LogoutUrl></LogoutUrl>
            <EnableAudienceRestriction>false</EnableAudienceRestriction>
        </ServiceProvider>
    </ServiceProviders>
</SSOIdentityProviderConfig>