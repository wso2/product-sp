<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>wso2sp-${project.version}</baseDirectory>
    <id>WSO2 Stream Processor Distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>target/wso2carbon-kernel-${carbon.kernel.version}</directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>README.txt</exclude>
                <exclude>LICENSE.txt</exclude>
                <exclude>bin/carbon.sh</exclude>
                <exclude>bin/carbon.bat</exclude>
                <exclude>release-notes.html</exclude>
                <exclude>conf/osgi/launch.properties</exclude>
                <exclude>conf/deployment.yaml</exclude>
                <exclude>conf/transports/netty-transports.yml</exclude>
                <exclude>**/*.ipr</exclude>
                <exclude>**/*.iwr</exclude>
                <exclude>**/*.eclipse</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>../..</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>carbon-home/conf/transports</directory>
            <outputDirectory>conf/transports</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/conf/osgi</directory>
            <outputDirectory>conf/osgi</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/conf/security</directory>
            <outputDirectory>conf/security</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/resources/security</directory>
            <outputDirectory>resources/security</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>**/*.sh</include>
                <include>**/*.bat</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>**/*.txt</include>
            </includes>
            <fileMode>444</fileMode>
        </fileSet>
        <fileSet>
            <directory>../samples</directory>
            <outputDirectory>samples</outputDirectory>
            <excludes>
                <exclude>target/**</exclude>
                <exclude>scripts/**</exclude>
                <exclude>pom.xml</exclude>
                <exclude>LICENSE.txt</exclude>
                <exclude>release-notes.html</exclude>
                <exclude>**/*.ipr</exclude>
                <exclude>**/*.iwr</exclude>
                <exclude>**/*.eclipse</exclude>
                <exclude>**/*.iml</exclude>
                <exclude>**/*.releaseBackup</exclude>
                <exclude>%regex[(?!.*utils/).*pom.xml]</exclude>
                <exclude>**/target/**</exclude>
            </excludes>
            <fileMode>644</fileMode>
        </fileSet>

        <fileSet>
            <directory>carbon-home/deployment/siddhi-files</directory>
            <outputDirectory>deployment/siddhi-files</outputDirectory>
            <fileMode>644</fileMode>
            <excludes>
                <exclude>empty.txt</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <outputDirectory>deployment/workspace</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <fileMode>644</fileMode>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <outputDirectory>deployment/csv-files</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <fileMode>644</fileMode>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <outputDirectory>deployment/simulation-configs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/extensions</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>**/*.jar</include>
            </includes>
            <fileMode>664</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/external-libs</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>**/*.jar</include>
            </includes>
            <fileMode>664</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>target/wso2carbon-kernel-${carbon.kernel.version}/bin/kernel-version.txt</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>444</fileMode>
        </file>
        <file>
            <source>carbon-home/conf/deployment.yaml</source>
            <outputDirectory>conf/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>target/wso2carbon-kernel-${carbon.kernel.version}/bin/README.txt</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>444</fileMode>
        </file>
        <file>
            <source>carbon-home/bin/version.txt</source>
            <outputDirectory>bin/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>carbon-home/deployment/stream-definitions.yaml</source>
            <outputDirectory>deployment/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
    </files>
</assembly>
