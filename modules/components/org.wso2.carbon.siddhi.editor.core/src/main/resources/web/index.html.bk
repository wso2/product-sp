                    <!-- Start: file explorer -->
                    <div id="workspace-explorer">
                    </div>
                    <!-- End: file explorer -->
                </div>
                <!-- End: left container -->
                <!-- Start: right container -->
                <div id="right-container" class="left-container-default">
